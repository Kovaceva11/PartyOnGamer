<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <!-- 2 column grid layout with text inputs for the first and last names -->
            <div class="row mb-4">
               <h2 class="fw-bold mb-2 text-uppercase">Create Profile</h2>
              <p class="text-white-50 mb-5">Please Create your POG Profile</p>
              <!-- Activision Blizzard input for Overwatch -->
            <div class="form-outline mb-4">
              <input type="text" id="pogUsername" class="form-control" />
              <label class="form-label" for="pogUsername">POG Account Username</label>
            </div>
            <!-- Password input -->
            <div class="form-outline mb-4">
              <input type="password" id="password" class="form-control" />
              <label class="form-label" for="password">Create Password</label>
            </div>              
            </div>
            <p class="text-white-50 mb-5">Enter Your Gaming Tags below to sync stats on your POG Account</p>

            <!-- Activision Blizzard input for Overwatch -->
            <div class="form-outline mb-4">
              <input type="text" id="battlenetID" class="form-control" />
              <label class="form-label" for="battlenetID">Battlenet Username</label>
            </div>

            <!-- SteamID input -->
            <div class="form-outline mb-4">
              <input type="text" id="steamID" class="form-control" />
              <label class="form-label" for="steamID">Steam ID or Username</label>
            </div>            

            <div class="form-outline mb-4">
              <input type="text" id="twitchID" class="form-control" />
              <label class="form-label" for="twitchID">Twitch Username</label>
            </div>

            <!-- Email input -->
            <div class="form-outline mb-4">
              <input type="email" id="email" class="form-control" />
              <label class="form-label" for="email">Email address</label>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Create Profile</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="../public/js/pogProfile.js"></script>